<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="zdmatrix.hed.visualcard"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.NFC"/>

    <application
        
        android:allowBackup="true"
        android:icon="@drawable/hedicon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" android:name="zdmatrix.hed.visualcard.UI.NFCObject">
        <activity
            android:name="zdmatrix.hed.visualcard.UI.MainActivity"
            android:label="@string/app_name" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="zdmatrix.hed.visualcard.UI.OTP" android:screenOrientation="portrait"><intent-filter android:label="NFC NDEF">
                <action android:name="android.nfc.action.NDEF_DISCOVERED"/>
                <data android:mimeType='text/plain'/>
            </intent-filter><intent-filter android:label="NFC TECH">
                <action android:name="android.nfc.action.TECH_DISCOVERED"/>
            </intent-filter><intent-filter android:label="NFC Tag OTP">
                <action android:name="android.nfc.action.TAG_DISCOVERED"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter><meta-data android:name="android.nfc.action.TECH_DISCOVERED" android:resource="@xml/tech_list"/></activity>
        <activity android:name="zdmatrix.hed.visualcard.UI.ElectricMoney" android:screenOrientation="portrait"><intent-filter android:label="NFC NDEF">
                <action android:name="android.nfc.action.NDEF_DISCOVERED"/>
                <data android:mimeType='text/plain'/>
            </intent-filter><intent-filter android:label="NFC TECH">
                <action android:name="android.nfc.action.TECH_DISCOVERED"/>
            </intent-filter><intent-filter android:label="NFC Tag ElectricMoney">
                <action android:name="android.nfc.action.TAG_DISCOVERED"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter><meta-data android:name="android.nfc.action.TECH_DISCOVERED" android:resource="@xml/tech_list"/></activity>
        <activity android:name="zdmatrix.hed.visualcard.UI.NewUKey" android:screenOrientation="portrait"><intent-filter android:label="NFC NDEF">
                <action android:name="android.nfc.action.NDEF_DISCOVERED"/>
                <data android:mimeType='text/plain'/>
            </intent-filter><intent-filter android:label="NFC TECH">
                <action android:name="android.nfc.action.TECH_DISCOVERED"/>
            </intent-filter><intent-filter android:label="NFC Tag NewUKey">
                <action android:name="android.nfc.action.TAG_DISCOVERED"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter><meta-data android:name="android.nfc.action.TECH_DISCOVERED" android:resource="@xml/tech_list"/></activity>
        <activity android:name="zdmatrix.hed.visualcard.UI.CardTest" android:screenOrientation="portrait">
            <intent-filter android:label="NFC NDEF">
                <action android:name="android.nfc.action.NDEF_DISCOVERED"/>
                <data android:mimeType='text/plain'/>
            </intent-filter>
            <intent-filter android:label="NFC TECH">
                <action android:name="android.nfc.action.TECH_DISCOVERED"/>
            </intent-filter>
            <intent-filter android:label="NFC Tag CardTest">
                <action android:name="android.nfc.action.TAG_DISCOVERED"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <meta-data android:name="android.nfc.action.TECH_DISCOVERED" android:resource="@xml/tech_list"/>
        </activity>
        
    </application>

</manifest>
