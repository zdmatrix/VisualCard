<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/Lavender"
    android:orientation="vertical"
    tools:context=".OTP" >

    <TextView
        android:id="@+id/dynamicorderViewLabal"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_x="0dp"
        android:layout_y="25dp"
        android:gravity="center"
        android:text="@string/DynamicOrder"
        android:textColor="@color/Black"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/etOTPChallenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="100dp"
        android:layout_y="100dp"
        android:ems="10"
        android:gravity="center" />

    <Button
        android:id="@+id/btnReturnMain"
        android:layout_width="182dp"
        android:layout_height="51dp"
        android:layout_x="70dp"
        android:layout_y="382dp"
        android:background="@drawable/btnpublic"
        android:text="@string/returnmain"
        android:textColor="@color/Black" />

    <Button
        android:id="@+id/btnGenerateChallenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="5dp"
        android:layout_y="101dp"
        android:text="@string/GenerateChallenge" />

    <ImageView
        android:id="@+id/imgLoadedImage"
        android:layout_width="fill_parent"
        android:layout_height="142dp"
        android:layout_x="2dp"
        android:layout_y="188dp" />

</AbsoluteLayout>